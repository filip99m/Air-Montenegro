<html>

<head>
    <title>Search Flights</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"> 
    <link rel="stylesheet" type="text/css" href="search.css">
</head>

<body>

        <div style="margin-bottom: 100px;">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Air Montenegro</a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color: red;" href="/logout" id="logout-button">Logout</a>
                    </li>
                </div>
                </div>
            </nav>
        </div>

        <div class="container">
            <div class="row">
                <div class="col">
                </div>
            <div class="col" style="background-color: rgba(255, 255, 255, 0.3); border-radius: 10px;">
            
                <form class="register_form" action="/search" method="GET">
                        <div>
                            <h1>Booking</h1>
                        </div>
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">From</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="from" name="from" placeholder="From" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">To</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="to" name="to" placeholder="To" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Date</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="date" id="date" name="date" placeholder="Date" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Class</label>
                            <div class="col-sm-10">
                                <select class="form-control" name="class">
                                    <option value="business">Business</option>
                                    <option value="economy">Economy</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">No. of People</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="number" id="noofppl" name="noofppl" placeholder="No. of People">
                            </div>
                        </div>
                        <div class="submitBox">
                            <input type="submit" class="btn btn-primary" value="Sumbit">
                        </div>
                    </form>
            </div>
        </div>       
    </div>
    <script src="search.js"></script>
</body>

</html>