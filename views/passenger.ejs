<html>
    <head>
        <title>Passenger Details</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link rel= "stylesheet" type="text/css" href= "register.css">
    </head>
    <body>

        <div style="margin-bottom: 100px;">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Air Montenegro</a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                </div>
                </div>
            </nav>
        </div>

        <div class="container">
            <div class="row">
                <div class="col">
            </div>
            <div class="col" style="background-color: rgba(255, 255, 255, 0.3); border-radius: 10px;">
            
                    <form class="register_form" method="POST" action="/passenger">
                        <div>
                            <h1>
                                Passenger <%= n %>
                            </h1>
                        </div>
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="name" name="name" placeholder="Name" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Age</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="number" min="1" max="100" id="age" name="age" placeholder="Age" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Gender</label>
                            <div class="col-sm-10">
                                <input type="radio" id="male" name="gender" value="M" checked> Male <br>
                                <input type="radio" id="female" name="gender" value="F"> Female <br>
                            </div>
                        </div>
                        <div class="submitBox">
                            <input type="submit" class="btn btn-primary" value="Submit">
                        </div>
                    </form>
            </div>
        </div>       
    </div>

    </body>
</html>